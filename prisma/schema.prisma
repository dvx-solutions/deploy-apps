generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Application {
  id          Int         @id @default(autoincrement())
  name        String
  url         String      @unique
  environment Environment
}

enum Environment {
  DEV
  HMG
  PROD
}
